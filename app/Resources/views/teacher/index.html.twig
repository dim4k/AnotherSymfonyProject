{% extends 'base.html.twig' %}

{% block body %}
    <h1>Teacher list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td><a href="{{ path('teacher_show', { 'id': teacher.id }) }}">{{ teacher.id }}</a></td>
                <td>{{ teacher.firstname }}</td>
                <td>{{ teacher.lastname }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('teacher_show', { 'id': teacher.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('teacher_edit', { 'id': teacher.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('teacher_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
