{% extends 'base.html.twig' %}

{% block body %}
    <h1>Session list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td><a href="{{ path('session_show', { 'id': session.id }) }}">{{ session.id }}</a></td>
                <td>{{ session.title }}</td>
                <td>{% if session.startDate %}{{ session.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if session.endDate %}{{ session.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('session_show', { 'id': session.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('session_edit', { 'id': session.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('session_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
